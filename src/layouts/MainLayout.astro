---
import '../styles/global.css';
import BlobCursorFollower from "../components/global/BlobCursorFollower.astro";
import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
const { pathname } = Astro.url;

function cursorFollowerActive() {
	const paths = ["", "/", "/it/", "/it"];
	return paths.includes(pathname);
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content="Fashion design portfolio showcasing projects and illustrations">
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body class="bg-gray-50">
  <Header />
  {cursorFollowerActive() && <BlobCursorFollower />}
  <main class="min-h-screen">
    <slot />
  </main>
  <Footer />
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body>
</html>