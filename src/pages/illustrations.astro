---
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';

const illustrations = await getCollection('illustrations');
const sortedIllustrations = illustrations.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<MainLayout title="Illustrations - Fashion Portfolio">
  <div class="max-w-7xl mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold mb-12">Fashion Illustrations</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {sortedIllustrations.map((illustration) => (
        <div class="group">
          <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
            <div class="aspect-[3/4] bg-gray-200">
              <img 
                src={illustration.data.image} 
                alt={illustration.data.title}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <h2 class="text-xl font-bold mb-2">{illustration.data.title}</h2>
              <div class="flex flex-wrap gap-2">
                {illustration.data.tags.map((tag: string) => (
                  <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>