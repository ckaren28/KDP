---
interface Props {
  title: string;
  description: string;
  coverImage: string;
  slug: string;
  tags: string[];
}

const { title, description, coverImage, slug, tags } = Astro.props;
---

<a href={'/projects/' + slug} class="group block">
  <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
    <div class="aspect-video bg-gray-200 overflow-hidden">
      <img 
        src={coverImage} 
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
    </div>
    <div class="p-6">
      <h2 class="text-2xl font-bold mb-2 group-hover:text-gray-600 transition-colors">{title}</h2>
      <p class="text-gray-600 mb-4">{description}</p>
      <div class="flex flex-wrap gap-2">
        {tags.map((tag: string) => (
          <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </div>
</a>